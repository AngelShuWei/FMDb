extends layout.pug

block content
    script(src="/javascripts/index.js" type="module")
    each reviewAndMovie in reviewsAndMovies
        div(id=`indiv-review-${reviewAndMovie[0].id}` class=`registration-form indiv-review-${reviewAndMovie[0].id} review-box-in-review-list`)
            a(href=`http://localhost:8080/movies/${reviewAndMovie[1].id}`).movie-in-review
                div(class='reviewMovieName') #{reviewAndMovie[1].name}
            div(class='reviewContent') "#{reviewAndMovie[0].content}"
            div
                a(href=`http://localhost:8080/reviews/${reviewAndMovie[0].id}/edit`)
                    button(class='editBtn') Edit
                button(id=`review-${reviewAndMovie[0].id}`).reviewBtn Delete

