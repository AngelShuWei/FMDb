extends layout.pug

include utils.pug

block content
  +validationErrorSummary(errors)
  form(action='/user/login' method='post' class='login-form')
    input(type='hidden' name='_csrf' value=csrfToken)
    +field('Email Address:', 'email', email)
    +field('Password:', 'password', null, 'password')
    div
      button(type='submit' class='login' id='login') Login
      a(href='/' class='cancel') Cancel
    div
      p: a(href='/user/register' class='register') Don't have an account?
